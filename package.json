{
  "name": "trip-cost-calculator",
  "version": "1.0.0",
  "description": "Trip Cost Calculator with Next.js PWA frontend and Python backend",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "python api_server.py",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm start",
    "install:all": "npm install && cd frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["trip", "calculator", "pwa", "nextjs", "python", "flask"],
  "author": "",
  "license": "MIT"
} 